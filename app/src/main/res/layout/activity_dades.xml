<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:background="@color/primary"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_weight="6"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_weight="6"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></LinearLayout>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="8dp"
                android:orientation="vertical">

            <EditText
                android:id="@+id/etCorreuElectronicDades"
                android:hint="@string/str_correo_electronico"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:padding="10sp"
                android:layout_gravity="center_horizontal"
                android:selectAllOnFocus="true"
                android:background="@color/white"
                android:layout_weight="2"
                android:layout_margin="8dp"
                android:textSize="12sp"
                android:layout_height="match_parent" />

            <EditText
                android:id="@+id/etNomDades"
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:hint="@string/str_nombre"
                android:selectAllOnFocus="true"
                android:layout_gravity="center_horizontal"
                android:background="@color/white"
                android:layout_margin="8dp"
                android:textSize="12sp"
                android:padding="10sp"
                android:layout_height="match_parent" />

            <EditText
                android:layout_margin="8dp"
                android:singleLine="true"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:id="@+id/etApellido"
                android:hint="@string/str_apellidos"
                android:selectAllOnFocus="true"
                android:layout_gravity="center_horizontal"
                android:textSize="12sp"
                android:padding="10sp"
                android:background="@color/white"

                android:layout_height="match_parent" />


            <EditText
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:id="@+id/etNick"
                android:singleLine="true"
                android:hint="@string/str_nick"
                android:layout_gravity="center_horizontal"
                android:selectAllOnFocus="true"
                android:background="@color/white"
                android:layout_margin="8dp"
                android:padding="10sp"
                android:textSize="12sp"
                android:layout_height="match_parent" />

            <EditText
                android:layout_weight="2"
                android:id="@+id/etContrasenyaDades"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:hint="@string/str_contraseña"
                android:singleLine="true"
                android:layout_gravity="center_horizontal"
                android:selectAllOnFocus="true"
                android:layout_margin="8dp"
                android:textSize="12sp"
                android:padding="10sp"
                android:background="@color/white"
                android:layout_height="match_parent" />

            <EditText
                android:layout_weight="2"
                android:id="@+id/etConfirmaContrasenya"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:hint="@string/str_confirmar_contraseña"
                android:layout_gravity="center_horizontal"
                android:layout_margin="8dp"
                android:textSize="12sp"
                android:singleLine="true"
                android:padding="10sp"
                android:background="@color/white"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/bEnviarDades"
                android:layout_gravity="center_horizontal"
                android:layout_weight="2"
                android:padding="15dp"
                android:layout_width="wrap_content"
                android:text="@string/str_enviar_datos"
                android:background="@color/white"
                android:textColor="@color/primary"
                android:visibility="invisible"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="6"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="6"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></LinearLayout>

</LinearLayout>