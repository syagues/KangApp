<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="@color/primary"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:theme="@style/Toolbar"
        app:popupTheme="@style/Toolbar"
        android:minHeight="?attr/actionBarSize"
        android:elevation="6dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true"
            android:paddingTop="8dp"
            android:paddingBottom="20dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/title_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:padding="10dp"
                android:textSize="15sp"
                android:textColor="@color/primary"
                android:text="@string/str_info"/>

            <View
                android:id="@+id/info_separator"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/title_info"
                android:background="@color/default_background"/>

            <ImageView
                android:id="@+id/im_marca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/info_separator"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="15dp"
                android:paddingLeft="15dp"
                android:layout_marginRight="10dp"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:src="@drawable/ic_info_grey600_36dp"/>

            <EditText
                android:id="@+id/et_marca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/info_separator"
                android:layout_toRightOf="@+id/im_marca"
                android:layout_marginRight="8dp"
                android:layout_marginTop="10dp"
                android:selectAllOnFocus="true"
                android:hint="@string/str_marca"
                android:singleLine="true"/>

            <EditText
                android:id="@+id/et_modelo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_marca"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/im_marca"
                android:layout_marginRight="8dp"
                android:selectAllOnFocus="true"
                android:hint="@string/str_modelo"
                android:singleLine="true"/>

            <Spinner
                android:id="@+id/sp_uso"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_below="@id/et_modelo"
                android:layout_toRightOf="@id/im_marca"
                android:layout_marginRight="3dp"
                android:layout_marginTop="10dp"
                android:textSize="12sp"/>

            <Spinner
                android:id="@+id/sp_que"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_modelo"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/title_precios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sp_que"
                android:layout_alignParentLeft="true"
                android:padding="10dp"
                android:textSize="15sp"
                android:textColor="@color/primary"
                android:text="@string/str_precios"/>

            <View
                android:id="@+id/precios_separator"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/title_precios"
                android:background="@color/default_background"/>

            <LinearLayout
                android:id="@+id/precios"
                android:layout_below="@+id/precios_separator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/card_precio1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:id="@+id/title_precio1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:padding="10dp"
                        android:textSize="13sp"
                        android:textColor="@color/primary"
                        android:text="@string/str_dias_1_3"/>

                    <EditText
                        android:id="@+id/et_precio1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/title_precio1"
                        android:layout_centerHorizontal="true"
                        android:paddingBottom="10dp"
                        android:selectAllOnFocus="true"
                        android:inputType="numberDecimal"
                        android:hint="10"
                        android:textSize="22sp"/>

                </RelativeLayout>

                <RelativeLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/card_precio2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_weight="1"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:id="@+id/title_precio2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:padding="10dp"
                        android:textSize="13sp"
                        android:textColor="@color/primary"
                        android:text="@string/str_dias_4_7"/>

                    <EditText
                        android:id="@+id/et_precio2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/title_precio2"
                        android:layout_centerHorizontal="true"
                        android:paddingBottom="10dp"
                        android:selectAllOnFocus="true"
                        android:inputType="numberDecimal"
                        android:hint="20"
                        android:textSize="22sp"/>

                </RelativeLayout>

                <RelativeLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/card_precio3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/card_articulos"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:id="@+id/title_precio3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:padding="10dp"
                        android:textSize="13sp"
                        android:textColor="@color/primary"
                        android:text="@string/str_dias_8_15"/>

                    <EditText
                        android:id="@+id/et_precio3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/title_precio3"
                        android:layout_centerHorizontal="true"
                        android:paddingBottom="10dp"
                        android:selectAllOnFocus="true"
                        android:inputType="numberDecimal"
                        android:hint="30"
                        android:textSize="22sp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/card_precio4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/card_tratos"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:id="@+id/title_precio4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:padding="10dp"
                        android:textSize="13sp"
                        android:textColor="@color/primary"
                        android:text="@string/str_dias_16_31"/>

                    <EditText
                        android:id="@+id/et_precio4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/title_precio4"
                        android:layout_centerHorizontal="true"
                        android:paddingBottom="10dp"
                        android:selectAllOnFocus="true"
                        android:inputType="numberDecimal"
                        android:hint="40"
                        android:textSize="22sp"/>

                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/title_deposito"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/precios"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:textSize="13sp"
                android:textColor="@color/primary"
                android:text="@string/str_deposito"/>

            <EditText
                android:id="@+id/et_deposito"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/precios"
                android:layout_toRightOf="@+id/title_deposito"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:selectAllOnFocus="true"
                android:inputType="numberDecimal"
                android:hint="35"
                android:textSize="22sp"/>

            <View
                android:id="@+id/extras_separator"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/et_deposito"
                android:layout_marginTop="10dp"
                android:background="@color/default_background"/>

            <LinearLayout
                android:id="@+id/extras"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/extras_separator">

                <EditText
                    android:id="@+id/et_extras"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.7"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:selectAllOnFocus="true"
                    android:hint="@string/str_extras"
                    android:singleLine="true"/>

                <EditText
                    android:id="@+id/et_precio_extras"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="8dp"
                    android:selectAllOnFocus="true"
                    android:inputType="numberDecimal"
                    android:hint="@string/str_precio_extras"
                    android:singleLine="true"/>

            </LinearLayout>

            <EditText
                android:id="@+id/et_comentarios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/extras"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="10dp"
                android:selectAllOnFocus="true"
                android:hint="@string/str_comentarios"/>

        </RelativeLayout>

    </ScrollView>

</LinearLayout>