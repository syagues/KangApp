<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <scrolls.ObservableScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/parallax_image_height"
                android:scaleType="centerCrop"
                android:src="@drawable/user1" />

            <View
                android:id="@+id/anchor"
                android:layout_width="match_parent"
                android:layout_height="@dimen/parallax_image_height"
                android:minHeight="@dimen/parallax_image_height" />

            <android.support.v7.widget.CardView
                android:id="@+id/card_view_punt"
                android:layout_below="@+id/anchor"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:elevation="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp" >

                        <RatingBar
                            android:id="@+id/ratingBar"
                            style="@style/customRatingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true" />


                    </RelativeLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_infog"
                android:layout_below="@+id/card_view_punt"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:elevation="12dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:layout_gravity="left"
                            android:scaleX="0.8"
                            android:scaleY="0.8"
                            android:src="@drawable/ic_person_grey600_36dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.8"
                            android:layout_gravity="right"
                            android:paddingTop="8dp"
                            android:text="@string/str_nombre"
                            android:paddingLeft="10dp"
                            android:textSize="15sp"
                            android:textColor="@color/light_grey"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:layout_gravity="left"
                            android:scaleX="0.8"
                            android:scaleY="0.8"
                            android:src="@drawable/ic_email_grey600_36dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.8"
                            android:layout_gravity="right"
                            android:paddingTop="8dp"
                            android:text="@string/str_correo_electronico"
                            android:paddingLeft="15dp"
                            android:textSize="15sp"
                            android:textColor="@color/light_grey"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:layout_gravity="left"
                            android:scaleX="0.8"
                            android:scaleY="0.8"
                            android:src="@drawable/ic_call_grey600_36dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.8"
                            android:layout_gravity="right"
                            android:paddingTop="8dp"
                            android:text="@string/str_telefono"
                            android:paddingLeft="10dp"
                            android:textSize="15sp"
                            android:textColor="@color/light_grey"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:layout_gravity="left"
                            android:scaleX="0.8"
                            android:scaleY="0.8"
                            android:src="@drawable/ic_language_grey600_36dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.8"
                            android:layout_gravity="right"
                            android:paddingTop="8dp"
                            android:text="@string/str_pais"
                            android:paddingLeft="13dp"
                            android:textSize="15sp"
                            android:textColor="@color/light_grey"/>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_redsoc"
                android:layout_below="@+id/card_view_infog"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:elevation="12dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:layout_gravity="left"
                            android:paddingLeft="5dp"
                            android:scaleX="0.8"
                            android:scaleY="0.8"
                            android:src="@drawable/ic_facebook_grey600_36dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.8"
                            android:layout_gravity="right"
                            android:paddingTop="8dp"
                            android:text="@string/str_facebook"
                            android:paddingLeft="15dp"
                            android:textSize="15sp"
                            android:textColor="@color/light_grey"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:layout_gravity="left"
                            android:paddingLeft="5dp"
                            android:scaleX="0.8"
                            android:scaleY="0.8"
                            android:src="@drawable/ic_twitter_grey600_36dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.8"
                            android:layout_gravity="right"
                            android:paddingTop="8dp"
                            android:text="@string/str_twitter"
                            android:paddingLeft="13dp"
                            android:textSize="15sp"
                            android:textColor="@color/light_grey"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:layout_gravity="left"
                            android:paddingLeft="5dp"
                            android:scaleX="0.8"
                            android:scaleY="0.8"
                            android:src="@drawable/ic_google_plus_grey600_36dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.8"
                            android:layout_gravity="right"
                            android:paddingTop="8dp"
                            android:text="@string/str_googleplus"
                            android:paddingLeft="15dp"
                            android:textSize="15sp"
                            android:textColor="@color/light_grey"/>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_idiom"
                android:layout_below="@+id/card_view_redsoc"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_marginBottom="30dp"
                android:elevation="12dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:layout_gravity="left"
                            android:paddingLeft="5dp"
                            android:scaleX="0.8"
                            android:scaleY="0.8"
                            android:src="@drawable/ic_flag_grey600_36dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.8"
                            android:layout_gravity="right"
                            android:paddingTop="8dp"
                            android:text="@string/str_misidiomas"
                            android:paddingLeft="15dp"
                            android:textSize="15sp"
                            android:textColor="@color/light_grey"/>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </scrolls.ObservableScrollView>

    <include layout="@layout/gradient_header" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary"
        android:minHeight="?attr/actionBarSize"
        app:popupTheme="@style/Theme.AppCompat.Light.DarkActionBar"
        app:theme="@style/Toolbar"/>

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:scaleType="center"
        android:src="@drawable/ic_create_white_24dp"
        app:fab_colorNormal="@color/primary"
        app:fab_colorPressed="@color/accent" />

</FrameLayout>