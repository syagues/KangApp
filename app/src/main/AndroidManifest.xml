<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="projecte.kangapp" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name=".PresentacioActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegistreActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".DadesActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".PrincipalActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Toolbar" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".MisArticulosActivity"
            android:label="@string/str_mis_articulos"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Toolbar"/>
        <activity
            android:name=".ChatActivity"
            android:label="@string/str_chat"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Toolbar"/>
        <activity
            android:name=".PublicarActivity"
            android:label="@string/str_publicar"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Toolbar"/>
        <activity
            android:name=".ComoKangerActivity"
            android:label="@string/str_como_kanger"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Toolbar"/>
        <activity
            android:name=".ComoArrendatarioActivity"
            android:label="@string/str_como_arrend"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Toolbar"/>
        <activity
            android:name=".DetalleArticuloActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Toolbar"/>
        <activity
            android:name=".AlquilarActivity"
            android:label="@string/str_alquilar"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Toolbar"/>
        <activity
            android:name=".PerfilActivity"
            android:label="@string/str_miperfil"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Toolbar"/>
        <activity
            android:name=".EditarPerfilActivity"
            android:label="@string/str_editar_perfil"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Toolbar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="projecte.kangapp.PerfilActivity" />
        </activity>
        <activity
            android:name=".AjustesActivity"
            android:label="@string/str_ajustes"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Toolbar"/>
        <activity
            android:name=".AyudaActivity"
            android:label="@string/str_ayuda"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Toolbar"/>

        <activity
            android:name=".ProvaBDActivity"
            android:label="provaBD"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Toolbar"/>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_key" />
    </application>

</manifest>
